{{>layout/header}}

<h1>'오늘은 뭘 먹었지?' 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">리뷰 ID</label>
                <input type="text" class="form-control" id="id" value="{{post.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="food">음식</label>
                <input type="number" class="form-control" id="food" value="{{post.food}}">
            </div>
            <div class="form-group">
                <label for="restaurant">식당</label>
                <input type="number" class="form-control" id="restaurant" value="{{post.restaurant}}">
            </div>
            <div class="form-group">
                <label for="rating">평점</label>
                <input type="number" class="form-control" id="rating" value="{{post.rating}}">
            </div>
            <div class="form-group">
                <label for="access">공개 범위</label>
                <input type="number" class="form-control" id="access" value="{{post.access}}">
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
    </div>
</div>

{{>layout/footer}}